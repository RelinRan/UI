<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_message_dialog_background"
    android:elevation="@dimen/message_dialog_background_elevation"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/message_dialog_title_padding_horizontal"
        android:paddingTop="@dimen/message_dialog_title_padding_top"
        android:text="@string/message_dialog_title"
        android:textColor="@color/message_dialog_title_text_color"
        android:textSize="@dimen/message_dialog_title_text_size" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/message_dialog_content_margin_horizontal"
        android:layout_marginVertical="@dimen/message_dialog_content_margin_vertical"
        android:gravity="center"
        android:textColor="@color/message_dialog_content_text_color"
        android:textSize="@dimen/message_dialog_content_text_size"
        tools:text="message" />

    <View
        android:id="@+id/v_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/message_dialog_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/message_dialog_cancel"
            android:textColor="@color/message_dialog_cancel_text_color"
            android:textSize="@dimen/message_dialog_button_text_size" />

        <View
            android:id="@+id/v_vertical_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/message_dialog_divider_color" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/message_dialog_confirm"
            android:textColor="@color/message_dialog_confirm_text_color"
            android:textSize="@dimen/message_dialog_button_text_size" />

    </LinearLayout>

</LinearLayout>