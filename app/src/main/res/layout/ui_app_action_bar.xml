<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_action_bar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="fill_horizontal"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/app_action_bar_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:src="@mipmap/ui_action_bar_back_black" />

    <TextView
        android:id="@+id/app_action_bar_back_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="@dimen/app_action_bar_back_text_size" />

    <TextView
        android:id="@+id/app_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/app_action_bar_title_text_size" />

    <ImageView
        android:id="@+id/app_action_bar_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical">

        <TextView
            android:id="@+id/app_action_bar_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/app_action_bar_menu_text_size"
            tools:text="Menu" />

        <TextView
            android:id="@+id/app_action_bar_menu_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ui_dot_red"
            android:gravity="center"
            android:minWidth="15dp"
            android:minHeight="15dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_action_bar_menu_number_text_size" />

    </FrameLayout>

</FrameLayout>