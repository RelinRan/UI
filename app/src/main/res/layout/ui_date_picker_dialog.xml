<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_date_picker_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_picker_button_group_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/date_picker_button_padding_horizontal"
            android:text="@string/wheel_picker_cancel"
            android:textColor="@color/date_picker_cancel_text_color"
            android:textSize="@dimen/date_picker_button_text_size" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/date_picker_title_text_color"
            android:textSize="@dimen/date_picker_title_text_size" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/date_picker_button_padding_horizontal"
            android:text="@string/wheel_picker_confirm"
            android:textColor="@color/date_picker_confirm_text_color"
            android:textSize="@dimen/date_picker_button_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/date_picker_divider_color" />

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wheel_footer_background_color" />

    <LinearLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_picker_group_height"
        android:orientation="horizontal" />

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wheel_footer_background_color" />

</LinearLayout>