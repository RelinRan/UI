<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/android_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ui_toast_background"
        android:gravity="center_horizontal"
        android:paddingVertical="@dimen/toast_padding_vertical"
        android:paddingHorizontal="@dimen/toast_padding_horizontal"
        android:text="操作成功"
        android:textColor="@color/toast_text_color"
        android:textSize="@dimen/toast_text_size"
        android:visibility="visible" />

</RelativeLayout>